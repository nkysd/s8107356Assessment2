<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.s8107356assessment2.LoginFragment"
        android:label="Login">

        <!-- Action: Login to Dashboard -->
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />

        <!-- Pass keypass (from login) to DashboardFragment -->
        <argument
            android:name="keypass"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.s8107356assessment2.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

</navigation>
